.switcher-choice
	position relative
	display inline-block
	font-size 30px

	&_sm
		font-size 20px

	&__input
		position absolute
		z-index -1
		opacity 0

		&:focus + .switcher-choice__label

			.switcher-choice__styled
				background darken(#f2f6fb, 5%)

		&:not(:checked) + .switcher-choice__label

			.switcher-choice__styled ~ .switcher-choice__side-right
				color #b0bacc

		&:checked + .switcher-choice__label

			.switcher-choice__styled ~ .switcher-choice__side-left
				color #b0bacc

			.switcher-choice__styled-icon
				left 1.15em

		&:not(:disabled) + .switcher-choice__label
			cursor pointer

			&:hover
				.switcher-choice__styled
					background darken(#f2f6fb, 5%)

		&:disabled + .switcher-choice__label
			opacity .75

	&__label
		display flex
		align-items center
		user-select none

	&__side-left
		font-size 14px
		font-weight 300
		text-align center

	&__side-right
		@extends .switcher-choice__side-left

	&__side-left
		margin-right 10px
		order 1

	&__side-right
		margin-left 10px
		order 3

	&__styled
		position relative
		display block
		order 2
		width 2em
		min-width 2em
		height 1em
		background #f2f6fb
		border-radius 3px

		transition 100ms ease
		transition-property background

	&__styled-icon
		position absolute
		z-index 2
		top .15em
		left .15em
		width .7em
		height .7em
		background-color $color-default
		background-repeat no-repeat
		background-position center
		background-size cover
		border-radius 4px

		transition all 200ms ease
		transition-property left