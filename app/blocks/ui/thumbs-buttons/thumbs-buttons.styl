.thumbs-buttons
	display flex
	flex-wrap nowrap
	align-items center
	font-size 12px

	&__item
		margin-left 15px
		display flex
		flex-wrap nowrap
		align-items center
		cursor pointer
		user-select none
		background-color transparent
		border none
		transition 300ms ease
		transition-property opacity

		&:not(.is-chose)

			&:hover,
			&:focus
				opacity .75

			.thumbs-buttons__icon
				margin-right 0

				&_up
					background-position $thumbs_buttons__icon_up[2] $thumbs_buttons__icon_up[3]

				&_down
					background-position $thumbs_buttons__icon_down[2] $thumbs_buttons__icon_down[3]

			.thumbs-buttons__label
				display none

		&:first-child
			margin-left 0

	&__icon
		margin-right 15px
		width $thumbs_buttons__icon_up[4]
		height $thumbs_buttons__icon_up[5]
		background-image url($sp_thumbs_buttons_image)

		&_up
			background-position $thumbs_buttons__icon_up_hover[2] $thumbs_buttons__icon_up_hover[3]

		&_down
			background-position $thumbs_buttons__icon_down_hover[2] $thumbs_buttons__icon_down_hover[3]

	&__label
		color #b0bacc
