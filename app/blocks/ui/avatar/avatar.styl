.avatar
	position relative
	display inline-block
	width 75px
	min-width 75px
	height 75px

	&_sm
		width 50px
		min-width 50px
		height 50px

	&_lg
		width 115px
		min-width 115px
		height 115px

	&__image
		display block
		width 100%
		height 100%
		background-size cover
		border-radius 50%

	&__content
		position-center()
		padding 5px
		display flex
		flex-direction column
		align-items center
		justify-content center
		border-radius 50%

	&__label
		display inline-block
		overflow hidden
		max-width 100%
		font-size 12px
		white-space nowrap
		letter-spacing -.3px
		text-overflow ellipsis
		color #fff

	&__confirmed
		position absolute
		z-index 1
		right 0
		bottom 5px
		display block
		width 30px
		height 30px
		background-color #3baf45
		background-image url(../images/icon_avatar-confirmed.png)
		background-repeat no-repeat
		background-position center
		border-radius 50%

		&_sm
			bottom 2px
			width 20px
			height 20px
			background-image url(../images/icon_avatar-confirmed-sm.png)

+media($breakpoints[xs], 'max')
	.avatar
		width (75px - (75px / 3))
		min-width (75px - (75px / 3))
		height (75px - (75px / 3))

		&_sm
			width (50px - (50px / 3))
			min-width (50px - (50px / 3))
			height (50px - (50px / 3))

		&_lg
			width (115px - (115px / 3))
			min-width (115px - (115px / 3))
			height (115px - (115px / 3))

		&__confirmed
			bottom 0
			width 25px
			height 25px

			&_sm
				bottom 0