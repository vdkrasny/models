mixin calendar()
	+b.calendar&attributes(attributes)
		+e.inner
			+e('span').month Декабрь
		+e.week
			- var dayN = ['Пн', 'Вт', 'ср', 'чт', 'пт', 'сб', 'вс']
			each item in dayN
				+e('span').week-day=item
		+e.days
			- for(var i = 28; i < 31; i++)
				+e('span').day.disabled=i
			+e('span').day.in-range.range-start.range-end 1
			- for(var i = 2; i < 9; i++)
				+e('span').day=i
			+e('span').day.in-range.range-start 9
			+e('span').day.current.in-range 10
			+e('span').day.in-range.range-end 11
			- for(var i = 12; i < 32; i++)
				+e('span').day=i
			- for(var i = 1; i < 9; i++)
				+e('span').day.disabled=i
		block
