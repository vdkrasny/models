.field
	position relative
	display flex
	align-items center
	justify-content space-between
	width 100%
	font-family $app-font-family
	text-align left
	border none

	&.disabled
		overflow hidden
		cursor default
		pointer-events none

		&:after
			position-center(1)
			display block
			content ''
			background alpha(#ffffff, 40%)

		.field__entry
			user-select none

	&_input
		align-items center

	&_textarea
		align-items flex-start

	&_fill
		height 100%

	&__inner
		flex-grow 1
		position relative
		overflow hidden
		word-wrap break-word

	&__entry
		padding 0
		display block
		overflow hidden
		width 100%
		font-family inherit
		white-space nowrap
		text-overflow ellipsis
		color #212121
		background-color transparent
		border none
		outline none

		-webkit-appearance none

		+placeholder-style()
			color #494949
			transition color 200ms ease-out

	&__controls
		display flex

	&_default
		$field-entry-font-size = 12px
		$field-input-line-height = 38px
		$field-area-line-height = 14px
		$field-area-min-lines = 8
		$field-area-padding = ($field-input-line-height - $field-area-line-height)
		$field-area-height = (($field-area-line-height * $field-area-min-lines) + $field-area-padding)

		padding 0 15px
		min-height $field-input-line-height
		font-size $field-entry-font-size
		background-color #f5f5f5
		border-radius 5px

		// &:hover,
		// &:focus
		// &:not(.disabled):not(:disabled)

		& > * + *
			margin-left 10px

		.field_input&

			.field__entry
				line-height $field-input-line-height

		.field_textarea&

			.field__entry
				padding-y ($field-area-padding / 2)
				min-height $field-area-height
				line-height $field-area-line-height

			.field__controls
				padding-y ($field-area-padding / 4)

		[type='file']
			display none

	&_primary
		@extends .field_default

		background-color #f2f6fb

	&_white
		@extends .field_default
			
		font-size 14px
		background-color #ffffff

	&_several
		@extends .field_default

		padding 0

		.field__entry
			text-align center

	&_load
		@extends .field_default

		padding 0
		display inline-flex
		width auto
		font-size 14px
		cursor default
		background-color transparent

		.field__entry
			color #8d97a9

	&_value-center

		.field__entry
			text-align center