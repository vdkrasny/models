$normalize-font-size = 12px

.normalize
	display block
	font-size $normalize-font-size
	line-height 1.2

	&__margin
		margin-top 1.75em

	& > *:first-child
		margin-top 0

	.h
		@extends .normalize__margin
		margin-bottom .25em
		display block
		font-weight 500

	h1,
	.h1
		@extends .normalize .h
		font-size 2em
		// font-size em(24px, $normalize-font-size)

	h2,
	.h2
		@extends .normalize .h
		font-size 1.666666667em
		// font-size em(20px, $normalize-font-size)

	h3,
	.h3
		@extends .normalize .h
		font-size 1.5em
		// font-size em(18px, $normalize-font-size)

	h4,
	.h4
		@extends .normalize .h
		font-size 1.333333333em
		// font-size em(16px, $normalize-font-size)

	h5,
	.h5
		@extends .normalize .h
		font-size 1.166666667em
		// font-size em(14px, $normalize-font-size)

	h6,
	.h6
		@extends .normalize .h
		font-size 1em

	table
		@extends .normalize__margin

	table:not(.no-style)
		display block
		overflow-x auto
		-webkit-overflow-scrolling touch
		-ms-overflow-style -ms-autohiding-scrollbar
		width 100%
		max-width 100%
		text-align center
		border-bottom 1px solid #e9ecef

		thead td,
		thead th
			vertical-align bottom
			border-bottom 2px solid #e9ecef

		thead
		tbody
			display table
			width 100%

		th
			font-weight bold

		td,
		th
			padding 1.2em
			vertical-align top
			border-top 1px solid #e9ecef

	ul,
	ol
		@extends .normalize__margin
		padding-left 2em

		li
			margin-top 1.15em

			&:first-of-type
				margin-top 0

	ul
		list-style-type disc

	ol
		list-style-type decimal

	img
		@extends .normalize__margin
		max-width 100%

	a:not(.btn):not(.link)
		text-decoration underline
		color $color-accent

		&:hover
		&:focus
			text-decoration none

	b
	strong
		font-weight bold

	i
	em
		font-style italic

	small
		font-size 90%

	abbr
		text-decoration underline

	p
		@extends .normalize__margin

		& + p
			margin-top 1.15em

	blockquote
		@extends .normalize__margin
		padding-y 7px
		padding-left 1.5em
		border-left 4px solid $color-accent

	figure
		@extends .normalize__margin
		display inline-block

		img
			display block

	figcaption
		@extends .normalize__margin
		font-size 90%
		text-align right