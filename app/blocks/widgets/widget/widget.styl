.widget
	@extends $ex-block-box-shadow

	display block
	width 100%
	background-color #ffffff

	&_clear
		background none
		box-shadow none

	&_fill
		flex 1 1 unquote('0%')
		height 100%

	&__inner
		padding 15px

	&__header
		position relative
		margin-bottom 33px
		padding-right 38px
		min-height 54px

	&__right-side
		text-align right

	&__title
		margin-right 10px
		display block
		font-size 28px
		line-height 38px
		text-transform uppercase

	&__fullness
		display block
		font-size 13px
		font-weight bold
		color #eeb732
		background-repeat no-repeat
		background-position center right
		transition padding 150ms ease, color 300ms ease, background 400ms ease

		&_done
			padding-right 20px
			color #46aa4e
			background-image url(../images/icon_widget-fullness-100.png)

	&__views
		display inline-flex
		align-items center
		font-size 14px

	&__views-icon
		margin-x 2px
		margin-top -21px

	&__controls
		position absolute
		top 12px
		right 0
		display flex
		flex-wrap nowrap
		align-items center
		justify-content flex-end

	&__controls-inner
		position absolute
		top 38px
		right 0
		display flex
		flex-wrap nowrap
		align-items center
		justify-content flex-end

	&__info
		margin 10px 20px 0
		padding-x 40px
		font-size 12px
		background url(../images/icon_widget-info.png) no-repeat left center

+media($breakpoints[xs], 'max')
	.widget

		&__info
			margin-x 0
			padding-right 0
			padding-left 35px