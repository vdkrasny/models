.footer
	margin-top 25px
	text-align center
	color #ffffff
	background-color #2c3034

	&__inner
		padding 25px 45px

+media($breakpoints[md], 'max')
	.footer

		&__inner
			padding 20px 40px

+media($breakpoints[sm], 'max')
	.footer

		&__inner
			padding 20px 30px

+media($breakpoints[xs], 'max')
	.footer

		&__inner
			padding-x 0