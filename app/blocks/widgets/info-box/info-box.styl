.info-box
	position relative
	padding 10px
	display flex
	flex-wrap nowrap
	align-items center
	background-color #f2f6fb
	border-radius 5px

	&__icon
		margin-right 15px
		display flex
		align-items center
		justify-content center
		width 48px
		min-width 48px
		height 48px
		user-select none
		border-radius 5px

		&_red
			background-color $color-accent

		&_blue
			background-color #aaccf7

		&_green
			background-color #b3f7aa

		&_yellow
			background-color #f7d9aa

	&__text
		font-weight 300