$font-family = 'slick'
$font-path = '../fonts/'
$loader-path = './'

$arrow-size = 26px
$arrow-color = $color-accent
$prev-character = '←'
$next-character = '→'

$dot-size = 10px
$dot-color = #acacac
$dot-color-active = $color-accent

$opacity-default = .75
$opacity-on-hover = 1
$opacity-not-active = .25

.slick

  &-list
    .slick-loading &
      background #ffffff url($loader-path + 'ajax-loader.gif') center center no-repeat

  &-prev
  &-next
    position absolute
    top 50%
    padding 0
    display block
    min-width 20px
    min-height 20px
    font-size 0
    line-height 0
    cursor pointer
    color transparent
    background transparent no-repeat center
    border none
    outline none
    opacity $opacity-default
    transition 300ms ease
    transition-property opacity
    transform translateY(-50%)

    &:hover
    &:focus
      color transparent
      background transparent
      opacity $opacity-on-hover

    &.slick-disabled
      opacity $opacity-not-active

    &:before
      font-family $font-family
      font-size $arrow-size
      line-height 1
      color $arrow-color
      -webkit-font-smoothing antialiased
      -moz-osx-font-smoothing grayscale

      if ($font-family = 'slick')
        @font-face
          font-family 'slick'
          font-weight normal
          font-style normal
          src url($font-path + 'slick.eot')
          src url($font-path + 'slick.eot?#iefix') format('embedded-opentype'), url($font-path + 'slick.woff') format('woff'), url($font-path + 'slick.ttf') format('truetype'), url($font-path + 'slick.svg#slick') format('svg')

  &-prev
    left -25px

    [dir='rtl'] &
      right -25px
      left auto

    &:before
      content $prev-character

      [dir='rtl'] &
        content $next-character

  &-next
    right -25px

    [dir='rtl'] &
      right auto
      left -25px

    &:before
      content $next-character
      [dir='rtl'] &
        content $prev-character

  &-dotted
    margin-bottom 40px

  &-dots
    position absolute
    margin-top 20px
    display flex
    justify-content center
    width 100%
    pointer-events none

    & > li
      position relative
      margin 5px
      display inline-block
      pointer-events auto

      & > button
        display block
        width $dot-size
        height $dot-size
        font-size 0
        line-height 0
        cursor pointer
        color transparent
        background $dot-color
        border none
        opacity $opacity-default
        transition 300ms ease
        transition-property opacity

        &:hover
        &:focus
          opacity $opacity-on-hover

      &.slick-active

        & > button
          background-color $dot-color-active